@model Wfm.App.Core.Model.LoginMasterMetaData

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Forgot Password</title>
    <!-- Favicon-->
    <link rel="icon" href="~/Content/assets/images/favicon.ico" type="image/x-icon">
    <!-- Plugins Core Css -->
    <link href="~/Content/assets/css/app.min.css" rel="stylesheet">
    <!-- Custom Css -->
    <link href="~/Content/assets/css/style.css" rel="stylesheet" />
    <link href="~/Content/assets/css/pages/extra_pages.css" rel="stylesheet" />

    <!-- Plugins Js -->
    <script src="~/Content/assets/js/app.min.js"></script>
    <!-- Extra page Js -->
    <script src="~/Content/assets/js/pages/examples/pages.js"></script>
</head>
<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "login100-form validate-form" }))
                {
                    <span class="login100-form-title p-b-45">
                        Forgot Password
                    </span>
                    <span class="error-subheader2 p-t-20 p-b-15">
                        Enter your username.
                    </span>
                    if (@ViewBag.Message != null)
                    {
                        <span style="color:red;">@ViewBag.Message</span>
                    }
                    <div class="wrap-input100 validate-input">
                        @Html.TextBoxFor(m => m.USER_LOGIN_ID, new { @class = "input100", id = "USER_LOGIN_ID", required = true })
                        <span class="focus-input100"></span>
                        <span class="label-input100">Username</span>
                    </div>
                    <div class="container-login100-form-btn p-t-30">
                        <input type="submit" name="submit" class="login100-form-btn" value="Reset My Password" />                       
                    </div>
                    <div class="w-full p-t-25 text-center">
                        <div>
                            @Html.ActionLink("Login", "Index", "Account", new { @class = "txt1" })
                        </div>
                    </div>
                }
                <div class="login100-more" style="background-image: url(@Url.Content("~/Content/assets/images/pages/bg-02.png"));">
                </div>
            </div>
        </div>
    </div>
</body>
</html>
