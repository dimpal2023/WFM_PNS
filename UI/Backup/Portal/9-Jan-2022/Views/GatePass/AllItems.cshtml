@model Wfm.App.Core.Model.GatePassAllItemsMetaData
@using Lms.Web.Portal.Authorization

@{
    ViewBag.Title = "Gate Pass - View";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Gate Pass</h4>
                        </li>
                        <li class="breadcrumb-item bcrumb-1">
                            <a href="/GatePass/Create">
                                <i class="fas fa-layer-group"></i> Gate Pass
                            </a>
                        </li>
                        <li class="breadcrumb-item active">View</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <strong>View</strong> Gate Passes
                        </h2>                        
                    </div>
                    <div class="body">
                    @{
                        string roleName = Session["Role"].ToString();
                        int index = 0;
                        int rowNumber = 0;
                        //if (Roles.IsUserInRole(User.Identity.Name, WfmUserRoles.Security))
                        if(roleName == WfmUserRoles.Security)
                        {

                             <div class="col-lg-4 col-md-12">
                                <div class="card">
                                    <ul class="nav nav-tabs" style="width:950px">
                                        <li class="nav-item m-l-10">
                                            <a class="nav-link active" data-toggle="tab" href="#today">Today</a>
                                        </li>
                                        <li class="nav-item m-l-10">
                                            <a class="nav-link" data-toggle="tab" href="#yesterday">Yesterday</a>
                                        </li>
                                    </ul>
                                    <div class="tab-content" style="width:950px">
                                        <div class="tab-pane body active" id="today">
                                            <div class="table-responsive">
                                                <table id="tableExport"
                                                       class="display table table-hover table-checkable order-column m-t-20 width-per-100" width="100%">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th> Emp ID </th>
                                                            <th> Name </th>
                                                            <th> Out Time </th>
                                                            <th> In Time </th>
                                                            <th> Actual Out Time </th>
                                                            <th> Actual In Time </th>
                                                            <th> Phone No </th>
                                                            <th> Purpose </th>
                                                            <th> Action </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var gatepass in Model.TODAY)
                                                        {
                                                             <tr id="row_@gatepass.ID">
                                                                <td>@(++index)</td>
                                                                <td>@gatepass.WORKFORCE.EMP_ID</td>
                                                                <td>@gatepass.WORKFORCE.EMP_NAME</td>
                                                                <td>@gatepass.OUT_TIME</td>
                                                                <td>@gatepass.IN_TIME</td>
                                                                <td>@gatepass.ACTUAL_OUTTIME</td>
                                                                <td>@gatepass.ACTUAL_INTIME</td>
                                                                <td>@gatepass.WORKFORCE.MOBILE_NO</td>
                                                                <td>@gatepass.PURPOSE</td>
                                                                <td>
                                                                    <button type="button" class="btn btn-primary waves-effect m-r-15">Out</button>
                                                                    <button type="button" class="btn btn-danger waves-effect">In</button>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                        <div class="tab-pane body" id="yesterday">
                                            <div class="table-responsive">
                                                <table id="tableExport"
                                                       class="display table table-hover table-checkable order-column m-t-20 width-per-100" width="100%">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th> Emp ID </th>
                                                            <th> Name </th>
                                                            <th> Out Time </th>
                                                            <th> In Time </th>
                                                            <th> Actual Out Time </th>
                                                            <th> Actual In Time </th>
                                                            <th> Phone No </th>
                                                            <th> Purpose </th>
                                                            <th> Action </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var gatepass in Model.YESTERDAY)
                                                        {
                                                            <tr id="row_@gatepass.ID">
                                                                <td>@(++rowNumber)</td>
                                                                <td>@gatepass.WORKFORCE.EMP_ID</td>
                                                                <td>@gatepass.WORKFORCE.EMP_NAME</td>
                                                                <td>@gatepass.OUT_TIME</td>
                                                                <td>@gatepass.IN_TIME</td>
                                                                <td>@gatepass.ACTUAL_OUTTIME</td>
                                                                <td>@gatepass.ACTUAL_INTIME</td>
                                                                <td>@gatepass.WORKFORCE.MOBILE_NO</td>
                                                                <td>@gatepass.PURPOSE</td>

                                                                <td>
                                                                    <button type="button" class="btn btn-primary waves-effect m-r-15">Out</button>
                                                                    <button type="button" class="btn btn-danger waves-effect">In</button>
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else 
                        {
                            <div class="table-responsive">
                                <table id="tableExport"
                                       class="display table table-hover table-checkable order-column m-t-20 width-per-100" width="100%">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th> Emp ID </th>
                                            <th> Name </th>
                                            <th> Out Time </th>
                                            <th> In Time </th>
                                            <th> Actual Out Time </th>
                                            <th> Actual In Time </th>
                                            <th> Phone No </th>
                                            <th> Purpose </th>
                                            <th> Active </th>
                                            <th> Action </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var gatepass in Model.ALLITEMS)
                                        {
                                            <tr id="row_@gatepass.ID">
                                                <td>@(++index)</td>
                                                <td>@gatepass.WORKFORCE.EMP_ID</td>
                                                <td>@gatepass.WORKFORCE.EMP_NAME</td>
                                                <td>@gatepass.OUT_TIME</td>
                                                <td>@gatepass.IN_TIME</td>
                                                <td>@gatepass.ACTUAL_OUTTIME</td>
                                                <td>@gatepass.ACTUAL_INTIME</td>
                                                <td>@gatepass.WORKFORCE.MOBILE_NO</td>
                                                <td>@gatepass.PURPOSE</td>

                                                @if (gatepass.STATUS.Value)
                                                {
                                                    <td>Yes</td>
                                                }
                                                else
                                                {
                                                    <td>No</td>
                                                }
                                                <td>
                                                    <a href="/GatePass/Edit/@gatepass.ID" class="btn btn-tbl-edit">
                                                        <i class="material-icons">create</i>
                                                    </a>
                                                    <a href="#" class="btn btn-tbl-delete" data-toggle="modal" data-target="#exampleModalCenter">
                                                        <i class="material-icons">delete_forever</i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    }                                         
                </div>
                     </div>
                </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                     aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalCenterTitle">
                                    Delete Gate Pass
                                </h5>
                                <button type="button" class="close" data-dismiss="modal"
                                        aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <h5>Are you sure you want to delete this gate pass?</h5>
                            </div>
                            <div class="modal-footer">
                                <button id="gatepass_delete_confirm" type="button"
                                        class="btn btn-info waves-effect">
                                    Confirm
                                </button>
                                <button type="button" class="btn btn-danger waves-effect"
                                        data-dismiss="modal">
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>    
        </div>                        
     </div>    
</section>
<input type="hidden" id="hiddenGatePassId" />

<script src="~/Content/assets/js/pages/gatepass/gatepass.js"></script>  
