<script type="text/javascript">
    debugger;
    function onDepartmentChange() {
        debugger;
        var departmentId = $("#DEPARTMENT_ID option:selected").val();
        $.get('/Dashboard/GetSubDepartmentByDepartmentId?departmentId=' + departmentId, function (data) {
            $('#SUBDEPARTMENT_ID').find('option').not(':first').remove();
            $.each(data, function (i, item) {
                $('#SUBDEPARTMENT_ID').append($('<option>', {
                    value: item.SUBDEPT_ID,
                    text: item.SUBDEPT_NAME
                }));
            });
            $('#SUBDEPARTMENT_ID').formSelect();
        });
    }

    $("#SUBDEPARTMENT_ID").change(function () {
        GetDashboardData();
    });
</script>