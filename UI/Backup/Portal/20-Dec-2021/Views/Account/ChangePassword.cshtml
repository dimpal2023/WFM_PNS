@model Wfm.App.Core.Model.ResetPasswordLoginMasterMetaData

@{
    ViewBag.Title = "Home - Change Password";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Change Password</h4>
                        </li>
                        <li class="breadcrumb-item bcrumb-1">
                            <a href="/Dashboard/Index">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="card">                        
                        <div class="body">
                            @if(ViewBag.Message != null)
                            {
                                <span style="color:red">@ViewBag.Message</span>
                            }
                            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { id = "form_validation" }))
                            {
                                <div class="row clearfix">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <div class="card">
                                            <div class="body">
                                                <div class="row clearfix">
                                                    <div class="col-sm-4">
                                                        <div class="form-group">
                                                            @Html.LabelFor(x => x.CURRENT_PASSWORD, "Current password")
                                                            @Html.PasswordFor(x => x.CURRENT_PASSWORD, new { id = "CURRENT_PASSWORD", required = true })
                                                            @Html.ValidationMessageFor(m => m.CURRENT_PASSWORD)
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row clearfix">
                                                    <div class="col-sm-4">
                                                        <div class="form-group">
                                                            @Html.LabelFor(x => x.New_PASSWORD, "New password")
                                                            @Html.PasswordFor(x => x.New_PASSWORD, new { id = "New_PASSWORD", required = true })
                                                            @Html.ValidationMessageFor(m => m.New_PASSWORD)
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row clearfix">
                                                    <div class="col-sm-4">
                                                        <div class="form-group">
                                                            @Html.LabelFor(x => x.Confirm_PASSWORD, "Confirm password")
                                                            @Html.PasswordFor(x => x.Confirm_PASSWORD, new { id = "Confirm_PASSWORD", required = true })
                                                            @Html.ValidationMessageFor(m => m.Confirm_PASSWORD)
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-4 p-t-20 text-center">
                                                    <button type="submit" id="submit" class="btn btn-primary waves-effect m-r-15">Submit</button>
                                                    <button type="button" id="cancel" class="btn btn-danger waves-effect">Cancel</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
   </div>
</section>

<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/Content/assets/js/pages/user/change-password.js"></script>
        