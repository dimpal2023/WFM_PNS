@model IEnumerable<Wfm.App.Core.Model.ItemOperationsMasterMetaData>
@{
    int i = 0;
}
<table id="tableExport" class="display table table-hover table-checkable order-column m-t-20 width-per-100">
    <thead>
        <tr>
            <th>#</th>
            <th> Item Code </th>
            <th> Item Name </th>
            <th> Operation </th>
            <th> Rate </th>
            <th> Department </th>
            <th> Sub Department </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            i = i + 1;
        <tr>
            <td>@i</td>
            <td>@item.ITEM_CODE_NAME</td>
            <td>@item.ITEM_NAME</td>
            <td>@item.OPERATION</td>
            <td>@item.RATE</td>
            <td>@item.DEPT_NAME</td>
            <td>@item.SUBDEPT_NAME</td>
            <td>
                <a href="javascript:void(0)" onclick="getItemOperationById('@item.UNIQUE_OPERATION_ID')">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
        </tr>
        }

    </tbody>
</table>
<script>
    $("document").ready(function () {
        $('#tableExport').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy',
                'csv',
                'excel',
                'pdf',
                'print'
            ]});
    });
</script>




