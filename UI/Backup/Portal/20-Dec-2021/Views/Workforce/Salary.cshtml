@model Wfm.App.Core.Model.WorkforceSalaryMetaData

@{
    ViewBag.Title = "Workforce - Salary";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Employee</h4>
                        </li>
                        <li class="breadcrumb-item bcrumb-1">
                            <a href="/Workforce/GetworkforceSalary">
                                <i class="fas fa-layer-group"></i> Workforce
                            </a>
                        </li>
                        <li class="breadcrumb-item active">Add</li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="card">
                        <div class="header">
                            <h2>
                                <strong>Add</strong> Employee Salary Detail
                            </h2>
                        </div>
                        <div class="body">

                            <div class="row clearfix">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            @Html.LabelFor(x => x.EMP_ID, "Employee id")
                                            @Html.TextBoxFor(m => m.EMP_ID, "", new {id= "EMP_ID", @class = "form-control disabled", @type = "text" })
                                            @Html.ValidationMessageFor(m => m.EMP_ID)
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <div class="form-line">
                                            <button type="button" id="emp-search" class="btn btn-primary waves-effect m-r-15">Search</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            @using (Html.BeginForm("Salary", "Workforce", FormMethod.Post, new { @id = "EmployeeCreate", @class = "login100-form validate-form" }))
                            {
                                <div class="row clearfix">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.LabelFor(x => x.EMP_NAME, "Employee name")
                                                @Html.TextBoxFor(m => m.EMP_NAME, "", new { @class = "form-control disabled", @type = "text" })
                                                @Html.HiddenFor(m => m.WF_ID)
                                                @Html.HiddenFor(m => m.ACTION)
                                                @Html.HiddenFor(m => m.COMPANY_ID)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.LabelFor(x => x.UAN_NO, "UAN no.")
                                                @Html.TextBoxFor(m => m.UAN_NO, "", new {id= "UAN_NO", @class = "form-control disabled", @type = "text" })
                                                @Html.ValidationMessageFor(m => m.UAN_NO)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.LabelFor(x => x.PAN_CARD, "PAN no.")
                                                @Html.TextBoxFor(m => m.PAN_CARD, "", new {id= "PAN_CARD", @class = "form-control disabled", @type = "text" })
                                                @Html.ValidationMessageFor(m => m.PAN_CARD)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.LabelFor(x => x.EPF_NO, "EPF no.")
                                                @Html.TextBoxFor(m => m.EPF_NO, "", new {id= "EPF_NO", @class = "form-control disabled", @type = "text" })
                                                @Html.ValidationMessageFor(m => m.EPF_NO)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row clearfix">
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @Html.LabelFor(x => x.ESIC_NO, "ESIC no.")
                                                @Html.TextBoxFor(m => m.ESIC_NO, "", new {id= "ESIC_NO", @class = "form-control disabled", @type = "text" })
                                                @Html.ValidationMessageFor(m => m.ESIC_NO)
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <div class="form-line">                                                
                                                @Html.TextBox("SELECTEDBANKNAME", "", new { id = "SELECTEDBANKNAME", @class = "col-12 m-t-20 p-l-0", disabled = "disabled" })
                                                @Html.HiddenFor(m => m.SELECTEDBANKID)

                                                @Html.LabelFor(x => x.BANK_ID, "Bank")
                                                @Html.DropDownListFor(m => m.BANK_ID, new List<SelectListItem>
                                                        {
                                                            new SelectListItem{ Text="ICICI BANK", Value = "50AEFDE4-004D-EB11-9473-8CDCD4D2C4BC" },
                                                            new SelectListItem{ Text="HDFC BANK", Value = "51AEFDE4-004D-EB11-9473-8CDCD4D2C4BC" },
                                                            new SelectListItem{ Text="UNION BANK", Value = "52AEFDE4-004D-EB11-9473-8CDCD4D2C4BC" }
                                                         }, "Bank", new {id= "BANK_ID", @class = "col-12 m-t-20 p-l-0" })
                                                @Html.ValidationMessageFor(m => m.BANK_ID)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                        <div class="row clearfix">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        @Html.LabelFor(x => x.BANK_IFSC, "Bank IFCS code")
                                                        @Html.TextBoxFor(m => m.BANK_IFSC, "", new {id= "BANK_IFSC", @class = "form-control disabled", @type = "text" })
                                                        @Html.ValidationMessageFor(m => m.BANK_IFSC)
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        @Html.LabelFor(x => x.BANK_BRANCH, "Bank branch")
                                                        @Html.TextBoxFor(m => m.BANK_BRANCH, "", new {id= "BANK_BRANCH",@class = "form-control disabled", @type = "text" })
                                                        @Html.ValidationMessageFor(m => m.BANK_BRANCH)
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row clearfix">
                                            <div class="col-sm-6">
                                                <div class="form-group form-line">
                                                    <div class="form-line">
                                                        @Html.LabelFor(x => x.BANK_ACCOUNT_NO, "Bank account no.")
                                                        @Html.TextBoxFor(m => m.BANK_ACCOUNT_NO, "", new {id= "BANK_ACCOUNT_NO", @class = "form-control disabled", @type = "text" })
                                                        @Html.ValidationMessageFor(m => m.BANK_ACCOUNT_NO)
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        @Html.LabelFor(x => x.BASIC_DA, "Basic salary")
                                                        @Html.TextBoxFor(m => m.BASIC_DA, "", new { id = "BASIC_DA", @class = "form-control disabled", @type = "text" })
                                                        @Html.ValidationMessageFor(m => m.BASIC_DA)
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row clearfix">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        @Html.LabelFor(x => x.HRA, "HRA")
                                                        @Html.TextBoxFor(m => m.HRA, "", new { id = "HRA", @class = "form-control disabled", @type = "text" })
                                                        @Html.ValidationMessageFor(m => m.HRA)
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group form-float">
                                                    <div class="form-line">
                                                        @Html.LabelFor(x => x.SPECIAL_ALLOWANCES, "Special allowance")
                                                        @Html.TextBoxFor(m => m.SPECIAL_ALLOWANCES, "", new { id = "SPECIAL_ALLOWANCES", @class = "form-control disabled", @type = "text" })
                                                        @Html.ValidationMessageFor(m => m.SPECIAL_ALLOWANCES)
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row clearfix">
                                            <div class="col-sm-6">
                                                <div class="form-group">
                                                    <div class="form-line">
                                                        @Html.LabelFor(x => x.GROSS, "Gross salary")
                                                        @Html.TextBoxFor(m => m.GROSS, "", new {id= "GROSS", @class = "form-control disabled", @type = "text" })
                                                        @Html.ValidationMessageFor(m => m.GROSS)
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-sm-6">
                                                <div class="form-group form-float">
                                                    <div class="form-line">
                                                       
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-12 p-t-20 text-center">
                                            @if (Model.WF_ID == new Guid())
                                            {
                                                <button type="button" id="submitSal" class="btn btn-primary waves-effect m-r-15">Submit</button>

                                            }
                                            else
                                            {
                                                <button type="button" id="submitSal" class="btn btn-primary waves-effect m-r-15">Update</button>

                                            }
                                            <button type="button" id="cancel1" class="btn btn-danger waves-effect">Cancel</button>
                                        </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/Content/assets/js/pages/workforce/workforce.js"></script>
<script>
    $("#cancel1").click(function () {
        window.location.href = "/Workforce/GetworkforceSalary";
    });
</script>

