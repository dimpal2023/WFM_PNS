@model IList<Wfm.App.Core.Model.WorkforceLeavesMetaData>

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Leave List</h4>
                        </li>
                        <li class="breadcrumb-item bcrumb-1">
                            <a href="/Leave/All">
                                <i class="fas fa-layer-group"></i> Leave List
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <strong>View</strong> Leave List
                        </h2>
                    </div>
                    <div class="body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Employee Id</th>
                                    <th>Name</th>
                                    <th>From Date</th>
                                    <th>To Date</th>
                                    <th>Remarks</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.EMP_ID</td>
                                        <td>@item.EMP_NAME</td>
                                        <td>@item.FROM_DATE</td>
                                        <td>@item.TO_DATE</td>
                                        <td>@item.REMARKS</td>
                                        <td>
                                            <a href="/Leave/Edit?LEAVE_ID=@item.ID">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>