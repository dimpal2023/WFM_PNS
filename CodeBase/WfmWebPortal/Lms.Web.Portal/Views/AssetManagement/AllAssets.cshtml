@model List<Wfm.App.Core.Model.AssetMappingMasterMetaData>


@{
    ViewBag.Title = "Asset Management - All Assets";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Assets</h4>
                        </li>
                        <li class="breadcrumb-item bcrumb-1">
                            <a href="/AssetManagement/Create">
                                <i class="fas fa-layer-group"></i> Assets
                            </a>
                        </li>
                        <li class="breadcrumb-item active">All Assets</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <strong>All</strong> Assets
                        </h2>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table id="tableExport" 
                                   class="display table table-hover table-checkable order-column m-t-20 width-per-100" width="100%">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        @*<th> Unit </th>
                                        <th> Department </th>*@
                                        <th> Asset Name </th>
                                        <th> Asset Life </th>
                                        <th> Refundable </th>
                                        <th> Company </th>
                                        <th> Created By </th>
                                        <th> Active </th>
                                        <th> Action </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = 0;
                                        foreach (var asset in Model)
                                        {
                                            <tr id="row_@asset.ASSET_ID">
                                                <td>@(++index)</td>
                                                <td>@asset.ASSET_NAME</td>
                                                <td>@asset.ASSET_LIFE</td>
                                                <td>@asset.REFUNDABLE</td>
                                                <td>@asset.COMPANY_NAME</td>
                                                <td>@asset.CREATED_BY</td>
                                                <td>@asset.IS_ACTIVE</td>
                                                <td>
                                                    <a href="/AssetManagement/Edit/@asset.ASSET_ID" class="btn btn-tbl-edit">
                                                        <i class="material-icons">create</i>
                                                    </a>
                                                    <a href="#" class="btn btn-tbl-delete" data-toggle="modal" data-target="#exampleModalCenter">
                                                        <i class="material-icons">delete_forever</i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                     aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalCenterTitle">
                                    Delete Assets
                                </h5>
                                <button type="button" class="close" data-dismiss="modal"
                                        aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <h5>Are you sure you want to delete this asset?</h5>
                            </div>
                            <div class="modal-footer">
                                <button id="asset_delete_confirm" type="button"
                                        class="btn btn-info waves-effect">
                                    Confirm
                                </button>
                                <button type="button" class="btn btn-danger waves-effect"
                                        data-dismiss="modal">
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<input type="hidden" id="hiddenAsset" />

<script src="~/Content/assets/js/pages/asset/asset.js?v=1"></script>
