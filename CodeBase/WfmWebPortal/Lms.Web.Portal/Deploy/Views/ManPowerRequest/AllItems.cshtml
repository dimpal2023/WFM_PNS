@model IList<Wfm.App.Core.Model.ManPowerRequestFormMetaDataList>

@{
    ViewBag.Title = "New Hiring - All MRF";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">Man Power Requests</h4>
                        </li>
                        <li class="breadcrumb-item bcrumb-1">
                            <a href="/ManPowerRequirement/Index">
                                <i class="fas fa-layer-group"></i> Man Power Prequest
                            </a>
                        </li>
                    </ul>
                    <li class="breadcrumb-item active">View</li>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <strong>View</strong> Man Power Requests
                        </h2>
                    </div>
                    <div class="body">
                        <table id="tableExport" 
                                   class="display table table-hover table-checkable order-column m-t-20 width-per-100">
                            <thead>
                                <tr>
                                    <th>S.No</th>
                                    <th>MRF</th>
                                    <th>Unit</th>
                                    <th>Department</th>
                                    <th>Sub Department</th>
                                    <th>Skill</th>
                                    <th>Designation</th>
                                    <th>Quantity</th>
                                    <th>Actual Hire</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.MRF_CODE.ToString("00000")</td>
                                    <td>@item.REC_NAME</td>
                                    <td>@item.BUILDING_NAME</td>
                                    <td>@item.FLOOR_NAME</td>
                                    <td>@item.SUBDEPT_NAME</td>
                                    <td>@item.SKILL_NAME</td>
                                    <td>@item.WF_DESIGNATION_NAME</td>
                                    <td>@item.QUANTITY</td>
                                    <td>@item.HIRING_QUANTITY</td>
                                    <td>@item.EMP_TYPE</td>
                                    <td>@item.MRF_STATUS</td>
                                    <td>
                                        <a href="/ManPowerRequest/Edit?mrf_INETRNAL_ID=@item.MRP_INETRNAL_ID">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>