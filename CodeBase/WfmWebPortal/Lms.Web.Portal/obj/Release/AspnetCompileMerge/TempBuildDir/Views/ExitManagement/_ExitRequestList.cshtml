@model IList<Wfm.App.Core.Model.ExitApprovalMetaData>
@{
    Layout = null;
}
<div class="table-responsive">

    <div class="row">

    </div>
    <table id="tableExport"
           class="display table table-hover table-checkable order-column m-t-20 width-per-100">
        <thead>
            <tr>

                <th>Approver</th>
                <th>Is Approved</th>
                <th>Workforce Name</th>
                <th>Employee Code</th>
                <th>Serveing Notice</th>
                <th>Serveing Day</th>
                <th>Resignation/Exit Date</th>
                <th>Reason Of Leaving</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.APPROVER_NAME</td>
                    <td>@item.APPROVER_STATUS</td>
                    <td>@item.WORKFORCE_NAME</td>
                    <td>@item.EMP_ID</td>
                    <td>@item.IS_NOTICE_SERVE</td>
                    <td>@item.NOTICE_DAYS Days</td>
                    <td>@Convert.ToDateTime(item.RESIGNATION_DATE).ToString("dd/MM/yyyy")--@Convert.ToDateTime(item.EXIT_DATE.Value.AddDays(item.NOTICE_DAYS)).ToString("dd/MM/yyyy")</td>
                    <td>@item.REASON_OF_LEAVING</td>
                </tr>
            }

        </tbody>
    </table>

</div>
<script>
        $("document").ready(function () {
            $('#tableExport').DataTable({
                dom: 'Bfrtip',
                //lengthMenu: [
                //    [10, 25, 50, -1],
                //    [10, 25, 50, 'All'],
                //],
                buttons: [
                    'copy',
                    'csv',
                    'excel',
                    'pdf',
                    'print'
                ]
            });
        });
</script>

