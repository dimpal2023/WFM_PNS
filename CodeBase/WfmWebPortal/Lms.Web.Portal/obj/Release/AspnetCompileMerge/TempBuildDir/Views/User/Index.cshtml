@model List<Wfm.App.Core.Model.UserMetaData>

@{
    ViewBag.Title = "User Management - All Users";
}

<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <div class="row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <ul class="breadcrumb breadcrumb-style ">
                        <li class="breadcrumb-item">
                            <h4 class="page-title">User Management</h4>
                        </li>
                        <li class="breadcrumb-item bcrumb-1">
                            <a href="#">
                                <i class="fas fa-layer-group"></i> All User
                            </a>
                        </li>
                        <li class="breadcrumb-item active">Users</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="card">
                    <div class="header">
                        <h2>
                            <strong>All</strong> Users
                        </h2>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped table-hover js-basic-example dataTable" width="100%">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th> User Name </th>
                                        <th> User Login Id </th>
                                        <th> Email-Id </th>
                                        <th> Mobile </th>
                                        <th> Status </th>
                                        <th> Action </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int index = 0;
                                        foreach (var user in Model)
                                        {
                                            <tr id="row_@user.USER_ID">
                                                <td>@(++index)</td>
                                                <td>@user.USER_NAME</td>
                                                <td>@user.USER_LOGIN_ID</td>
                                                <td>@user.MAIL_ID</td>
                                                <td>@user.MOBILE_NO</td>
                                                <td>@user.status</td>
                                                <td>
                                                    @if (user.status == "Yes")
                                                    {
                                                        <a href="/User/Edit/@user.USER_ID" class="btn btn-tbl-edit">
                                                            <i class="material-icons">create</i>
                                                        </a>
                                                        <a href="#" class="btn btn-tbl-delete" data-toggle="modal" data-target="#exampleModalCenter">
                                                            <i class="material-icons">delete_forever</i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a href="/User/Edit/@user.USER_ID" class="btn btn-tbl-edit" data-toggle="modal" data-target="#editModalCenter">
                                                            <i class="material-icons">create</i>
                                                        </a>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
                     aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalCenterTitle">
                                    Disable User
                                </h5>
                                <button type="button" class="close" data-dismiss="modal"
                                        aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <h5>Are you sure you want to disable this User?</h5>
                            </div>
                            <div class="modal-footer">
                                <button id="user_delete_confirm" type="button"
                                        class="btn btn-info waves-effect">
                                    Confirm
                                </button>
                                <button type="button" class="btn btn-danger waves-effect"
                                        data-dismiss="modal">
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div class="modal fade" id="editModalCenter" tabindex="-1" role="dialog"
                     aria-labelledby="editModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editModalCenterTitle">
                                    Inactive User
                                </h5>
                                <button type="button" class="close" data-dismiss="modal"
                                        aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <h5>This user is inactive. Do you want to mark active and then edit user?</h5>
                            </div>
                            <div class="modal-footer">
                                <button id="user_edit_confirm" type="button"
                                        class="btn btn-info waves-effect">
                                    Mark Active
                                </button>
                                <button type="button" class="btn btn-danger waves-effect"
                                        data-dismiss="modal">
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<input type="hidden" id="hiddenUserId" />
<script src="~/Content/assets/js/pages/user/user.js"></script>