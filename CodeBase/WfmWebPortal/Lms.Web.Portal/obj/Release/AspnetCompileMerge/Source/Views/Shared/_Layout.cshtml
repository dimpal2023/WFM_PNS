    <div>
        <!-- Left Sidebar -->
        <aside id="leftsidebar" class="sidebar">
            <!-- Menu -->
            <div class="menu">
                <ul class="list">
                    <li>
                        <div class="sidebar-profile clearfix">
                            <div class="profile-img">
                                <img src="~/Content/assets/images/profile.png" alt="profile">
                            </div>
                            <div class="profile-info">
                                <h3>@Context.User.Identity.Name</h3>
                                <p>Welcome @Session["UserName"]</p>
                                <p>Company - @Session["CompanyName"]</p>
                            </div>
                        </div>
                    </li>
                    @{
                        var controllerName = this.ViewContext.RouteData.Values["controller"].ToString();
                        var actionName = this.ViewContext.RouteData.Values["action"].ToString();

                        if (controllerName == "GatePass")
                        {
                            if (actionName == "Search" || actionName == "Edit") { actionName = "Create"; }
                        }

                        if (Request.IsAuthenticated && Session["MENU"] != null)
                        {
                            Dictionary<Wfm.App.Core.Model.MenuMetaData, List<Wfm.App.Core.Model.SubMenuMetaData>> userMenus = Session["MENU"] as Dictionary<Wfm.App.Core.Model.MenuMetaData, List<Wfm.App.Core.Model.SubMenuMetaData>>;
                            foreach (KeyValuePair<Wfm.App.Core.Model.MenuMetaData, List<Wfm.App.Core.Model.SubMenuMetaData>> item in userMenus)
                            {

                                <li @(item.Key.CONTROLLER_NAME.Contains(",") ? (item.Key.CONTROLLER_NAME.Contains(controllerName) ? "class=active" : "") : (item.Key.CONTROLLER_NAME == controllerName ? "class=active" : ""))>
                                    <a href="#" class="menu-toggle">
                                        <i class="menu-icon @item.Key.ICONCLASS"></i>
                                        <span>@item.Key.NAME</span>
                                    </a>
                                    <ul class="ml-menu">
                                        @foreach (var subItem in item.Value)
                                        {
                                            if (@subItem.CONTROLLER_NAME == "Dashboard" && subItem.ACTION_NAME == "Index" && Wfm.App.Common.Utility.NavBarActions.Contains(actionName))
                                            {
                                                <li class="active">
                                                    <a id="@String.Concat(@subItem.CONTROLLER_NAME, '_', @subItem.ACTION_NAME)" href="~/@subItem.CONTROLLER_NAME/@subItem.ACTION_NAME">@subItem.NAME</a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li @(controllerName == subItem.CONTROLLER_NAME && subItem.ACTION_NAME == actionName ? "class=active" : "")>
                                                    <a id="@String.Concat(@subItem.CONTROLLER_NAME, '_', @subItem.ACTION_NAME)" href="~/@subItem.CONTROLLER_NAME/@subItem.ACTION_NAME">@subItem.NAME</a>
                                                </li>
                                            }
                                        }
                                    </ul>
                                </li>
                            }
                        }
                    }
                </ul>
            </div>
            <!-- #Menu -->
        </aside>
    </div>
