@model IEnumerable<Wfm.App.Core.Model.WorkforceSalaryMetaData>

<table id="tableExport" class="display table table-hover table-checkable order-column m-t-20 width-per-100">
    <thead>
        <tr>
            <th>
                <label>
                    <input type="checkbox" class="filled-in" id="checkAll" />
                    <span></span>
                </label>
            </th>
            <th>Employee Id</th>
            <th>Name</th>
            <th>Basic salary</th>
            <th>HRA</th>
            <th>Special allowance</th>
            <th>Gross salary</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <label>
                        <input type="checkbox" name="wfIds" class="filled-in" value="@item.WF_ID" />
                        <span></span>
                    </label>
                </td>
                <td>@item.EMP_ID</td>
                <td>@item.EMP_NAME</td>
                <td>@item.BASIC_DA</td>
                <td>@item.HRA</td>
                <td>@item.SPECIAL_ALLOWANCES</td>
                <td>@item.GROSS</td>
                <td>
                    <a href="/Workforce/SalaryEdit?wfid=@item.WF_ID">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>
<script>
    $("document").ready(function () {
        $('#tableExport').DataTable({
            dom: 'Bfrtip',
            searching: true, paging: false, info: false,
            buttons: [
                'copy',
                'csv',
                'excel',
                'pdf',
                'print'
            ]});
    });
</script>