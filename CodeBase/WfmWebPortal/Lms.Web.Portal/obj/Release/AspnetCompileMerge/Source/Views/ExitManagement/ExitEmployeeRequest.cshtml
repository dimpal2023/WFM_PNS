        var noticeDate = parseInt($('#NOTICE_DAYS').val());
        if (isNaN(noticeDate)) {
            noticeDate = 1;
        }
        days = parseInt($(noticeDate, 1));

        if (!isNaN(date.getTime())) {
            date.setDate(date.getDate() + noticeDate);

            var yyyy = date.getFullYear().toString();
