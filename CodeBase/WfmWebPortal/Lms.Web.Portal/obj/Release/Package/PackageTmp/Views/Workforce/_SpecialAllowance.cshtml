@model IEnumerable<Wfm.App.Core.Model.SpecialAllowanceMetaData>
@{ 
    int i = 0;
}
<table id="tableExport" class="display table table-hover table-checkable order-column m-t-20 width-per-100">
    <thead>
        <tr>
            <th>#</th>
            <th> Workforce Name </th>
            <th> Code </th>
            <th> Month-Year </th>
            <th> Amount </th>
            <th> Remark </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            i = i + 1;
            <tr>
                <td>@i</td>
                <td>@item.WorkforceName</td>
                <td>@item.WorkforceCode</td>
                <td>@item.MONTH_ID - @item.YEAR_ID</td>
                <td>@item.Amount</td>
                <td>@item.Remarks</td>
                <td>
                    <a href="javascript:void(0)" onclick="editSpecialAllowance('@item.SpecialAllowanceId')">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        }

    </tbody>
</table>
<script>
    $("document").ready(function () {
        $('#tableExport').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'copy',
                'csv',
                'excel',
                'pdf',
                'print'
            ]});
    });
</script>
